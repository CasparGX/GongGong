            android:name="cc.xaabb.gonggong.module.article.list.ArticleListActivity"
            android:label="@string/title_activity_article_list"
            android:theme="@style/ColorTranslucentTheme" />
        <activity
            android:name="cc.xaabb.gonggong.module.library.LibraryActivity"
            android:label="@string/library"
            android:theme="@style/ColorTranslucentTheme" />
        <activity
            android:name="cc.xaabb.gonggong.module.swzl.SwzlDetailActivity"
            android:theme="@style/ColorTranslucentTheme" />
        <activity
            android:launchMode="singleTask"
            android:name="cc.xaabb.gonggong.module.course_list.CourseListActivity"
            android:theme="@style/ColorTranslucentTheme" />
        <activity
            android:name="cc.xaabb.gonggong.module.grade.GradeActivity"
            android:label="@string/grade"
            android:theme="@style/ColorTranslucentTheme" />
        <activity
            android:name="cc.xaabb.gonggong.module.article.detail.ArticleDetailActivity"
            android:theme="@style/ColorTranslucentTheme" />
        <activity
            android:name="cc.xaabb.gonggong.module.holiday.HolidayActivity"
            android:label="@string/count_down_title"
            android:theme="@style/ColorTranslucentTheme" />
        <activity
            android:name="cc.xaabb.gonggong.module.swzl.search.SwzlSearchActivity"
            android:theme="@style/ColorTranslucentTheme" />
        <activity
            android:name="cc.xaabb.gonggong.module.about_us.AboutUsActivity"
            android:theme="@style/ColorTranslucentTheme" />
        <activity
            android:name="cc.xaabb.gonggong.module.about_us.OpenSourceShowActivity"
            android:theme="@style/ColorTranslucentTheme" />
    </application>

</manifest>
