<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/interval_10"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp">

    <TextView
        android:id="@+id/tv_holiday_name"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/interval_5"
        android:layout_marginBottom="@dimen/interval_5"
        android:layout_marginLeft="@dimen/interval_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="儿童节" />

    <TextView
        android:id="@+id/tv_holiday_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interval_5"
        android:layout_marginBottom="@dimen/interval_5"
        android:layout_marginRight="@dimen/interval_10"
        android:layout_gravity="right"
        android:text="X天" />

</android.support.v7.widget.CardView>