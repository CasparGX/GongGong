<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="@dimen/radius_2"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/interval_mini_2"
            android:background="@drawable/cardview_header_default"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应还日期：2016/04/11" />

            <TextView
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="倒计时：13天" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/interval_mini_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="书名" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:layout_gravity="right"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/abc_action_button_min_height_material"></com.gc.materialdesign.views.ButtonRectangle>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>