<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.sky31.gonggong.module.article.detail.ArticleDetailActivity"
    android:background="@color/colorPrimary">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            toolbar:titleTextColor="@color/white"
            android:id="@+id/article_detail_toolbar"
            toolbar:title="文章详情"
            android:gravity="center"
            toolbar:navigationIcon="@drawable/ic_arrow_back"></android.support.v7.widget.Toolbar>

        <com.rey.material.widget.ProgressView
            android:id="@+id/article_detail_progressbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            style="@style/LightDeterminateLinearProgressView" />
    </android.support.design.widget.AppBarLayout>


    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/article_show_detail_webview">

    </WebView>

</LinearLayout>
