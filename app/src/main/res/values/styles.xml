<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>edittext
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/colorSwitchThumbNormal</item>
    </style>

    <style name="ColorTranslucentTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- left swipe menu table row-->
    <style name="DrawerMenuTableRowIcon">
        <item name="android:layout_height">@dimen/img_icon_size_mini</item>
        <item name="android:layout_width">@dimen/img_icon_size_mini</item>
        <item name="android:layout_marginRight">@dimen/interval_10</item>
        <item name="android:layout_marginLeft">@dimen/interval_10</item>
    </style>

    <style name="DrawerMenuTableRow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/interval_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/item_default_white</item>
    </style>

    <style name="DrawerMenuTableRowText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/interval_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--header info text-->
    <style name="HeaderInfoLayout">
        <item name="android:paddingTop">@dimen/interval_10</item>
        <item name="android:paddingBottom">@dimen/interval_10</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/item_pressed_primary</item>
    </style>
    <style name="HeaderInfoInnerLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="HeaderInfoContent">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="HeaderInfoTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextDefault">
        <item name="android:paddingLeft">@dimen/interval_10</item>
        <item name="android:paddingRight">@dimen/interval_10</item>
        <!--<item name="android:background">@null</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_transparent_9</item>
    </style>

    <style name="TextInputLayoutDefault" parent="AppTheme">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="colorControlNormal">@color/textColorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="EditTextLine" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/color_005eaa</item>
        <item name="android:textColor">@color/color_005eaa</item>
        <item name="colorControlNormal">@color/color_005eaa</item>
        <item name="colorControlActivated">@color/textColorPrimary</item>
    </style>

    <style name="MainNavItemLayout">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainNavItemText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainNavItemImg">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

</resources>
